# SOAREngine Configuration
# Copy this file to .env and fill in your values

# Application Settings
APP_NAME=SOAREngine
APP_VERSION=0.1.0
DEBUG=false

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# Threat Intelligence API Keys (optional - uses mock data if not set)
ABUSEIPDB_API_KEY=
VIRUSTOTAL_API_KEY=

# Slack Integration (optional)
SLACK_WEBHOOK_URL=
SLACK_DEFAULT_CHANNEL=#security-alerts

# Ticketing Integration (optional)
TICKETING_ENABLED=false
TICKETING_API_URL=
TICKETING_API_KEY=

# Playbook Settings
PLAYBOOK_AUTO_RUN=true
PLAYBOOK_MAX_CONCURRENT=5

# Enrichment Settings
ENRICHMENT_TIMEOUT=10
ENRICHMENT_CACHE_TTL=3600

# Metrics
METRICS_ENABLED=true